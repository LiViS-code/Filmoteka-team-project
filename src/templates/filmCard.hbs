{{#each this}}
<li class="card__film"  data-action='{{id}}'>
   <div class="thumb">
      <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}} {{name}}" width="100%" data-id="{{id}}"
         onerror="this.onerror=null;this.src='https://ik.imagekit.io/tc8jxffbcvf/default-movie-portrait_EmJUj9Tda5wa.jpg?tr=fo-auto,di-';" />
     
   </div>
   <h2 class="card__title">{{title}} {{name}}</h2>
   <p class="card__text">
      <span>{{#each genres}} {{name}} {{/each}}</span> | <span>{{release_date}}</span> 
      <span class="card__vote_average">{{vote_average}}</span>
   </p>
</li>
{{/each}}