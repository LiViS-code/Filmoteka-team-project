<div class="team__overlay">

    <div class="team__content">
        <ul class="team-list">
            {{#each this}}
            <li class="team-item">
                <a class="team-item__link" href="{{github}}" target="_blank">
                    <img loading="lazy" class="team-item__img" src="{{photo}}" width="160" height="180" alt="{{name}} {{surname}}">
                </a>
                <p class="team-item__about">
                    <span class="team-item__name">{{name}}</span>
                    <span class="team-item__surname">{{surname}}</span>
                </p>
            </li>
            {{/each}}
        </ul>
    </div>
</div>